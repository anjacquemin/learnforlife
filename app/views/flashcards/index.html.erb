<div class="theme-title theme-show">
  <h1><i class="fas fa-atlas"></i><%=@theme.name.upcase%></h1>
</div>

<div class="my-3"></div>
<div class="level-show flashcard" data-controller="flashcard-answer">
  <div class="questions_count">
    <div class="card-count-details">
      <div class="card-progressbar-wrapper">
        <div title="card-count" class="progressbar card-completion"  data-flashcard-answer-target = "cardCountBar"></div>
      </div>
      <div class= "card-number">
        <p data-flashcard-answer-target = "cardCountNumber">0/10</p>
      </div>
    </div>
  </div>
  <div class="my-3"></div>
  <div class="timer">
    <div class="yellow-container">
      <p><i class="fa-solid fa-stopwatch"></i></p>
      <p data-flashcard-answer-target="seconds">00</p>
      <p class="d-none"data-flashcard-answer-target="tens"></p>
      <p>s</p>
    </div>
  </div>
  <div class="my-3"></div>
  <div class="container">
    <%@flashcards.each_with_index do |flashcard, index| %>
      <% question_answer = flashcard.question_answer %>
      <% if index !=0 %>
        <% question_class = "class = 'questions d-none  questionCard#{index}'" %>
      <% else %>
        <% question_class = "class = 'questions questionCard#{index}'" %>
      <% end %>
      <div <%= question_class.html_safe %> data-flashcard-answer-target = <%="questionCard#{index}"%>>
        <div class = card-question>
          <h2><%=question_answer.question %></h2>
        </div>
        <div class="my-5"></div>
        <div class= "flashcard-answer d-none">
          <p> <%= question_answer.answer %></p>
        </div>
        <button class="btn-purple" data-action="click->flashcard-answer#seeAnswer">Voir réponse</button>
        <div class="d-none auto-evaluation-buttons" data-action="click->flashcard-answer#autoEvaluation" data-question-card-count=<%=index%> >
          <button class="btn-purple" data-auto-evaluation = "Not at all" >Pas du tout</button>
          <button class="btn-purple" data-auto-evaluation = "Not but close">Non mais presque </button>
          <button class="btn-purple" data-auto-evaluation = "Yes but hard">Oui avec difficultés</button>
          <button class="btn-purple" data-auto-evaluation = "Yes perfectly">Parfaitement</button>
        </div>
      </div>
    <% end %>
    <div data-quizz-answer-target = "endButtonDisplay" >
    </div>
  </div>
</div>
