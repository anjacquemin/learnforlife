<div class="row" data-controller="theme-index-display">
  <div class="theme-block-list quizz mt-5 col-md-6">
    <div class="banner">
      <h2><strong>QUIZZ</strong></h2>
      <div class="tabs">
        <button class="active-tab btn-tab" data-action="click->theme-index-display#displayQuizzsDiv"
        data-theme-index-display-target = "themeTab">Categorie</button>
        <button class="btn-tab" data-action="click->theme-index-display#displayQuizzsDiv" data-theme-index-display-target = "leaderboardTab">Leaderboard</button>
      </div>
    </div>
    <div data-theme-index-display-target = "themeDiv">
      <%= render "theme_cards_display", quizz: true %>
    </div>
    <div class= "d-none" data-theme-index-display-target = "leaderboardDiv">
      <%= render "theme_leaderboard" %>
    </div>
  </div>
  <div class="theme-block-list flashcards mt-5 col-md-6">
    <div class="banner">
      <h2><strong>FLASHCARDS</strong></h2>
      <% flashcards_to_revise_count = all_flashcards_to_revise().count %>
      <% flashcards_to_learn_count =  all_flashcards_to_learn().count %>
      <div class="tabs">
        <button class="active-tab btn-tab" data-action="click->theme-index-display#displayFlashcardsDiv"
        data-theme-index-display-target = "flashcardsToLearnTab">Nouvelle(<%= flashcards_to_learn_count %>)</button>
        <button class="btn-tab" data-action="click->theme-index-display#displayFlashcardsDiv" data-theme-index-display-target = "flashcardsToReviseTab">Réviser(<%= flashcards_to_revise_count %>)</button>
      </div>
    </div>

    <% if @user.flashcards == 0 %>
      <div class="white-container">
        <p>Réalise des quizzs pour débloquer les flashcards associés</p>
      </div>
    <% else %>
      <div data-theme-index-display-target = "flashcardsToLearnDiv">
        <%= render "theme_flashcard_card_creation", for_: "to_learn" %>
      </div>
      <div class= "d-none" data-theme-index-display-target = "flashcardsToReviseDiv">
        <%= render "theme_flashcard_card_creation", for_: "toRevise"%>
      </div>
    <% end %>

  </div>
</div>
