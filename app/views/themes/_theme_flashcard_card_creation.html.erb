<div class="themes-list">
  <% @themes.each do |theme| %>
    <%=link_to theme_path(theme) do%>

      <div class="theme-flashcard-card">
        <div class="separator">
          <div class="theme-title">
            <%= cl_image_tag theme.photo.key, height: 20, crop: :fill %>
