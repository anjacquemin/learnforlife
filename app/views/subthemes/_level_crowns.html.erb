<div class="level_crowns" <%= @level_blur_style %>>
  <% max_completion = level.records.maximum(:completion) %>
  <% max_completion ||= 0 %>
  <%= render "crowns", crown_class: "completed-crown", number: max_completion %>
  <%= render "crowns", crown_class: "uncompleted-crown", number: 3 - max_completion %>
</div>
